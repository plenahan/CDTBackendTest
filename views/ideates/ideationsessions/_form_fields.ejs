<div class="form-row">
  <div class="form-item">
    <label>Title</label>
    <input type="text" name="title" value="<%= ideationSession.title %>">
  </div>
  <div class="form-item">
      <label>Ideation Type</label>
      <select name="ideationType">
      <% ideationTypes.forEach(ideationType => { %>
        <% if (ideationType.id == ideationSession.ideationType) { %>
          <option selected label="<%= ideationType.title %>" value="<%= ideationType.id %>">
        <% } else { %>
          <option label="<%= ideationType.title %>" value="<%= ideationType.id %>">
        <% } %>
      <% }) %>
    </select>
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label>Needs Connected</label>
    <select name="needs" id="needs" multiple>
      <% needs.forEach(need => { %>
        <% if (need.id == ideationSession.need) { %>
          <option selected label="<%= need.statement %>" value="<%= need.id %>">
        <% } else { %>
          <option label="<%= need.statement %>" value="<%= need.id %>">
        <% } %>
      <% }) %>
      </select>
      <%- include('../../partials/multiselect.ejs', { id: 'needs' }) %>
    </div>
</div>
<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label>Cover</label>
    <input type="file" name="cover" class="image-cover filepond">
  </div>
  <div class="form-item">
    <label>Description</label>
    <textarea name="description"><%= ideationSession.description %></textarea>
  </div>
</div>