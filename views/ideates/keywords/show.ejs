<%- include('../ideate') %>
<h2 class="page-header"><%= keyword.word %></h2>
<div class="btn-row">
    <a class="btn btn-primary" href="/keywords/<%= keyword.id %>/edit">Edit</a>
    <%- include('../../partials/deleteForm', { url: `/keywords/${keyword.id}` }) %>
</div>
<% if (postItsByKeyword.length > 0) { %>
    <h2>Design Ideas</h2>
    <% postItsByKeyword.forEach(postIt => { %>
        <a href="/post-its/<%= postIt.id %>">
            <img height="150" width="150" src="<%= postIt.coverImagePath %>">
        </a>
    <% }) %>
<% } %>