<%- include('../empathize') %>
<h2 class="page-header">Search Personas</h2>
<form action="/personas" method="GET">
    <label>Name</label>
    <input type="text" name="title" value="<%= searchOptions.name %>">
    <button class="btn btn-primary" type="submit">Search</button>
</form>
<br>
<% personas.forEach(persona => { %>
    <div><%= persona.name %></div>
    <div class="btn-row">
        <a class="btn btn-primary" href="/personas/<%= persona.id %>">View</a>
        <a class="btn btn-primary" href="/personas/<%= persona.id %>/edit">Edit</a>
        <%- include('../../partials/deleteForm', { url: `/personas/${persona.id}` }) %>
    </div>
<% }) %>